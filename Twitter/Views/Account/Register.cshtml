@model Twitter.Models.RegisterViewModel
@{
    ViewBag.Title = "Join My Twitter Clone"; 
}

<style>
    .the-fieldset {
        border: 2px solid lightgrey;
        padding: 10px;
    }

    .padding0 {
        padding: 0% !important;
        border: none;
    }

    .the-legend {
        font-size: 18px;
        line-height: 20px;
        margin-bottom: 0;
        width: auto;
        padding: 0 6px;
        border: none;
    }

    .but-submit{
        
    }

</style>

<div class="panel-body">
    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container" style="margin-top: 32px;">
            <div class="panel panel-default col-md-6 padding0">
                <div class="panel-body col-md-12">
                    <fieldset class="col-md-06 the-fieldset">
                        <legend class="the-legend"><h4 style="font-weight: bold;">Register</h4></legend>

                        <div class="row form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>                       

                        <div class="row">
                            <div class="col-md-3"></div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="col-md-12">
                                        <input type="submit" value="Signup" class="btn btn-primary col-md-8 but-submit" style="float:right"/>
                                    </div>
                                </div>
                            </div>
                    </fieldset>
                </div>
            </div>
        </div>
    }
</div>